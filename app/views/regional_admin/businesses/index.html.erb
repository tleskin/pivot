<div class='container'>
  <div class='row'>
    <div class='col-md-6 col-md-offset-3 text-center'>
      <h3>Regional Businesses</h3>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-6 col-md-offset-3 text-center'>
      <table class='table'>
        <tr>
          <td><strong>Name</strong></td>
          <td><strong>Funding Needed</strong></td>
          <td><strong>Funding To Date</strong></td>
          <td><strong>Edit Information</strong></td>
          <td><strong>Delete Business</strong></td>
        </tr>
        <% @businesses.each do |business| %>
        <tr>
          <div class='prospect'>
            <td>
              <p><%= business.name %></p>
            </td>
            <td>
              <p><%= number_to_currency(business.funding_needed/100) %></p>
            </td>
            <td>
              <p><%= number_to_currency(business.funding_to_date/100) %></p>
            </td>
            <td>
              <%= button_to "Edit", root_path, class: 'btn btn-success', method: :get %>
            </td>
            <td>
              <%= button_to "Delete", regional_admin_business_path(id: business.id), class: 'btn btn-success', method: :delete %>
            </td>
          </div>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
