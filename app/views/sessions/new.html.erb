<div id="login">
<%= form_for(:session, url: login_path) do |f| %>
<%= f.label :email %><br />
<%= f.text_field :username %><br /><br />
<%= f.label :password %><br />
<%= f.password_field :password %><br /><br />
  <%= f.submit "Login", class:'login' %>
<% end %>
<%= link_to "New User", new_user_path, class:'login' %><br />
<%= flash[:notice] %><br />
</div>
